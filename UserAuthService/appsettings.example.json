{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Issuer": "UserAuthService",
    "Audience": "Microservices"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=auth_db;User=__DB_USER__;Password=__DB_PASSWORD__;"
  },
  "JwtKeys": {
    "PrivateKeyPath": "__JWT_PRIVATE_KEY_PATH__",
    "PublicKeyPath": "__JWT_PUBLIC_KEY_PATH__"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:7122",
      "http://localhost:8081"
    ]
  }
}